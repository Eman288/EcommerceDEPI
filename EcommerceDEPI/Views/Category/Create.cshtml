@{
}
@model EcommerceDEPI.Models.Category;

<style>
    body {
        margin: 0 !important;
    }

    main.pb-3 {
        padding: 0 !important;
        height: 100%;
        width: 100%;
    }

    .container {
        margin: 0;
        padding: 0;
        height: 90vh;
        width: 100%;
        max-width: none !important;
        padding: 0 5%;
    }

    nav {
        margin: 0 !important;
        padding: 0 !important;
        height: 10vh !important;
    }

    footer {
        height: 10%;
    }
</style>

<div class="form">
<form asp-controller="Category" asp-action="Create" method="post">
    <div>
        <label for="name">Name</label>
        <input type="text" required id="name" name="name" value="@Model.Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit">Create</button>
</form>
</div>