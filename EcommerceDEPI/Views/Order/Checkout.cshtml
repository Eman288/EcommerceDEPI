@model EcommerceDEPI.Models.Cart

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-action="Checkout" asp-controller="Order" method="post">
    <div class="form-group mb-3">
        <label for="address">Shipping Address</label>
        <input type="text" class="form-control" name="address" required />
    </div>

    <div class="form-group mb-3">
        <label for="zipcode">Zipcode</label>
        <input type="text" class="form-control" name="zipcode" required />
    </div>

    <div class="form-group mb-3">
        <label for="discountCode">Discount Code (Optional)</label>
        <input type="text" class="form-control" name="discountCode" />
    </div>

    <div class="form-group mb-3">
        <label for="paymentMethod">Payment Method</label>
        <select class="form-control" name="paymentMethod" required>
            <option value="Cash">Cash</option>
            <option value="Card">Card</option>
            <option value="Paypal">Paypal</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Complete Checkout</button>
</form>