@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5; /* نفس خلفية الـ Login */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    nav, footer {
        display: none !important;
    }

    body > div {
        height: 100%;
        display: flex;
        width: 100%;
        justify-content: center;
        align-items: center;
        align-content: center;
    }

    main {
        height: max-content;
        width: 100%;
        min-height: max-content;
    }

    .container {
        display: flex;
        width: 900px; /* نفس العرض بتاع الـ Login */
        height: 650px; /* ارتفاع يتسع للعناصر الاجتماعية */
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .signup-section {
        width: 50%;
        padding: 40px;
        box-sizing: border-box;
    }

    .image-section {
        width: 50%;
        background-color: #d3d3d3; /* نفس خلفية الصورة في الـ Login */
        background: url('/imgs/Home/p2.jpg') no-repeat center center;
        background-size: cover;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    p {
        font-size: 14px;
        color: #666;
        margin-bottom: 30px;
    }

        p a {
            color: #007bff; /* نفس لون الروابط في الـ Login */
            text-decoration: none;
        }

            p a:hover {
                text-decoration: underline;
            }

    label {
        font-size: 12px;
        color: #666;
        text-transform: uppercase;
        display: block;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 14px;
    }

    .password-container {
        position: relative;
    }

    .eye-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 16px;
    }

    button {
        width: 100%;
        padding: 12px;
        background-color: #000; /* نفس لون الأزرار في الـ Login */
        color: white;
        border: none;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
        margin-bottom: 20px;
    }

        button:hover {
            background-color: #333; /* نفس hover في الـ Login */
        }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        flex: 1;
    }

    .checkbox-container {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .checkbox-container input {
            width: auto;
            margin-right: 10px;
        }

    .checkbox-label {
        font-size: 14px;
        color: #666;
        text-transform: none;
    }

        .checkbox-label a {
            color: #007bff; /* نفس لون الروابط */
            text-decoration: none;
        }

            .checkbox-label a:hover {
                text-decoration: underline;
            }

    /* نفس الستايل بتاع الـ social-login من صفحة الـ Login */
    .social-login {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        z-index: 1;
    }

        .social-login p {
            text-align: center;
            margin: 0;
            font-size: 14px;
            color: #666;
        }

    .social-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background-color: #f5f5f5;
        border-radius: 50%;
        color: #333;
        text-decoration: none;
        transition: background-color 0.3s;
        z-index: 1;
    }

        .social-btn:hover {
            background-color: #ddd;
        }
</style>

<h2 class="login-title">
    <i class="fas fa-user-plus me-2"></i>Create Account
</h2>
<div class="container">
    <div class="signup-section">
        <h1>Signup</h1>
        <p>Already Have An Account, <a asp-page="./Login">Login</a>.</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form/data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Input.FullName">Full Name</label>
                    <input asp-for="Input.FullName" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Input.Password">Password</label>
                    <div class="password-container">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                        <span class="eye-icon"><i class="fas fa-eye"></i></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <div class="password-container">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                        <span class="eye-icon"><i class="fas fa-eye"></i></span>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Address">Address</label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Profile Picture</label>
                <input asp-for="Input.ProfilePicture" class="form-control" type="file" accept=".jpg,.png" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>

            <button type="submit">Create Account</button>


        </form>
    </div>
    <div class="image-section"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add animation to form elements
        document.querySelectorAll('.form-control').forEach((input, index) => {
            input.style.animationDelay = `${index * 0.1}s`;
            input.classList.add('animate__animated', 'animate__fadeInUp');
        });

        // Toggle password visibility
        document.querySelectorAll('.eye-icon').forEach(icon => {
            icon.addEventListener('click', () => {
                const input = icon.previousElementSibling;
                input.type = input.type === 'password' ? 'text' : 'password';
                icon.querySelector('i').classList.toggle('fa-eye');
                icon.querySelector('i').classList.toggle('fa-eye-slash');
            });
        });
    </script>
}